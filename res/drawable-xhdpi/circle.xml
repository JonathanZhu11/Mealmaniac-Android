<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="@color/red" />
            <stroke android:width="10sp" 
                android:color="#fff" />
            <corners
                android:bottomRightRadius="800dp"
                android:bottomLeftRadius="800dp"
                android:topRightRadius="800dp"
                android:topLeftRadius="800dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
    <item>
        <shape>
            <solid 
                android:color="@color/mealmaniac"
                />
            <stroke
                android:width="1dp"
                android:color="@color/gray" />
            <corners
                android:bottomRightRadius="800dp"
                android:bottomLeftRadius="800dp"
                android:topRightRadius="800dp"
                android:topLeftRadius="800dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
    
    
</selector>