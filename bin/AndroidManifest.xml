<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mealmaniac"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="13"
        android:targetSdkVersion="18" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.mealmaniac.LaunchPageActivity"
            android:label="@string/title_activity_launch_page" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.mealmaniac.LoginActivity"
            android:label="@string/title_activity_login"
            android:windowSoftInputMode="adjustResize|stateVisible" >
        </activity>
        <activity
            android:name="com.mealmaniac.LoadingPageActivity"
            android:label="@string/title_activity_loading_page" >
        </activity>
        <activity
            android:name="com.mealmaniac.MainActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.mealmaniac.MealPreviewActivity"
            android:label="@string/title_activity_meal_preview"
            android:parentActivityName="com.mealmaniac.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.mealmaniac.MainActivity" />
        </activity>
        <activity
            android:name="com.mealmaniac.ReviewActivity"
            android:label="@string/title_activity_review"
            android:parentActivityName="com.mealmaniac.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.mealmaniac.MainActivity" />
        </activity>
        <activity
            android:name="com.mealmaniac.SettingsActivity"
            android:label="@string/title_activity_settings"
            android:parentActivityName="com.mealmaniac.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.mealmaniac.MainActivity" />
        </activity>
        <activity
            android:name="com.mealmaniac.OrderActivity"
            android:label="@string/title_activity_order" >
        </activity>
        
    </application>

</manifest>
